@model List<LoginMVC_Database.Models.FakePersonData>

@{
    ViewData["Title"] = "Fake Person Details";
}

<h3>@ViewData["Title"]</h3>
<hr />

<div>

    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="FakePerson" asp-action="Create" class="btn btn-primary mb-3">Create Person</a>

      <form> 
        <table class="table table-responsive table-hover">
            <thead>
                <tr class="table-active">
                    <th>
                        ID
                    </th>

                    <th>
                        First Name
                    </th>

                    <th>
                        Last Name
                    </th>

                    <th>
                        Age
                    </th>
                    <th>
                        Action
                    </th>

                </tr>
            </thead>
            <tbody>
                    @if(Model != null && Model.Any())
                    {
                        @foreach (var person in Model)
                        {
                            <tr>
                                <td>
                                    @person.Id
                                </td>
                                <td>
                                    @person.FirstName
                                </td>
                                <td>
                                    @person.LastName
                                </td>
                                <td>
                                    @person.Age
                                </td>
                                <td>
                                    <div class="btn-group brn-group-sm">
                                        <a asp-controller="FakePersonData" asp-action="Edit" asp-asp-route="@person.Id" class="btn btn-primary">Edit</a>
                                        
                                    </div>

                                    <div class="btn-group brn-group-sm">
                                        <a asp-controller="FakePersonData" asp-action="Delete" asp-asp-route="@person.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">
                                No Person data available
                            </td>
                        </tr>
                    }
                </tbody>
        </table>
      </form>
    }
    else
    {

        <p>No data available.</p>
    }
    

</div>
     